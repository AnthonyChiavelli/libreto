{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "rootDir": "./src",
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es5", "es6", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
